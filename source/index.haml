---
js: home
---

:scss

  .home-nav {
    display: flex;
    justify-content: space-between;
    margin-top: 40px;
  }

  .home-nav-item {
    align-items: center;
    display: flex;
  }

  .home-count {
    color: #95b6c5;
    font-size: 32px;
    font-weight: bold;
    margin-right: 5px;
  }

  .gangster {
    text-align: center;
  }

  .gangster-title {
    font-size: 24px;
    margin: 0 0 40px 0;
    text-align: center;
  }

  .instead {
    font-size: 18px;
  }

  .datacamp-logo {
    flex-shrink: 0;
    margin-bottom: 40px;
  }

  .datacamp-link {
    color: #33aacc;

    &:hover::after {
      border-color: #33aacc;
    }
  }

  .datacamp-screenshot {
    margin-top: 40px;
  }

  .frontendconf-title {
    font-size: 24px;
    margin: 20px 0 40px;
    text-align: center;
  }

  .raisercise {
    background: #313742;
    color: #ffffff;
  }

  .track-life {
    background: linear-gradient(33deg, #89253e, #3a6186);
    color: #ffffff;
  }

  .roulettingale {
    background: #ecf1ec;
  }

  @media screen and (min-width: 768px) {

    .gangster-title {
      font-size: 42px;
    }

    .instead {
      font-size: 24px;
    }

    .datacamp {
      align-items: center;
      display: flex;
      flex-direction: column;
    }

    .datacamp-screenshot {
      margin-top: 60px;
    }

    .datacamp-card {
      max-width: 600px;
      position: relative;
      z-index: 1;

      p {
        margin: 0;

        &:not(:first-child) {
          margin-top: 16px;
        }
      }
    }

    .frontendconf-title {
      font-size: 32px;
      margin: 40px 0 20px;
    }
  
  }

  @media screen and (min-width: 900px) {
    .gangster-title {
      font-size: 56px;
    }
  }

  @media screen and (min-width: 1000px) {
    .datacamp {
      align-items: center;
      justify-content: space-between;
      flex-direction: row;
    }

    .datacamp-card {
      margin-right: -40px;
    }
    
    .datacamp-screenshot {
      margin-top: 0;
      width: 70%;
    }

    .frontendconf-title {
      font-size: 48px;
      margin-top: 120px;
    }
  }

  @media screen and (min-width: 1240px) {
    
    .gangster-title {
      font-size: 72px;
    }

    .instead {
      font-size: 32px;
    }

    .dd-trio {
      display: flex;
    }

    .dd-trio-item {
      display: flex;
      flex-direction: column;
      width: 33.333333%;

      &:not(:first-child) {
        margin-left: 40px;
      }
    }
  
  }

  @media screen and (min-width: 1400px) {
    .gangster-title {
      font-size: 80px;
    }

    .datacamp-card {
      margin-right: -80px;
    }
    
    .datacamp-screenshot {
      margin-top: 0;
      width: 60%;
    }
  }

