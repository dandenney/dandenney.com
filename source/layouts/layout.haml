!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }

    /Favicon
    <link href='favicon.ico' rel='shortcut icon' type='image/x-icon'>
    
    / Typekit
    <script src="//use.typekit.net/ddg5xff.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || 'Dan Denney'

    %link{ rel: 'stylesheet', href: '/assets/javascripts/vendor/chartist/dist/chartist.min.css' }
    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    = yield

    = partial 'partials/footer'

    = javascript_include_tag  'vendor'
    / = javascript_include_tag  'application'
    - if current_page.data.js
      = javascript_include_tag 'home'

    = partial 'partials/analytics'
