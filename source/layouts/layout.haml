!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }

    /Favicon
    <link href='favicon.ico' rel='shortcut icon' type='image/x-icon'>

    / Typekit
    <script src="https://use.typekit.net/ddg5xff.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || 'Dan Denney'

    :scss
      $aquahaze: #f8fafb;
      $frontendred: #b51f24;
      $white: #ffffff;

      $easing: cubic-bezier(0.785, 0.135, 0.15, 0.86);

      *,
      *::after,
      *::before {
        box-sizing: border-box;
      }

      body {
        background: $aquahaze;
        color: #3a5765;
        font-family: "canada-type-gibson", serif;
        font-size: 18px;
        margin: 0;
        padding: 0;
      }

      img {
        height: auto;
        max-width: 100%;
      }

      .dd-h1,
      .dd-h2,
      .dd-h3,
      .dd-h4 {
        font-weight: 600;
        line-height: 1.5;
        margin-top: 0;
      }

      .dd-card {
        background: #ffffff;
        border-radius: 4px;
        box-shadow: 0 2px 4px rgba(#3a5765, 0.15);
        padding: 30px;
      }

      .dd-link {
        color: $frontendred;
        position: relative;
        text-decoration: none;
        transition: color 0.3s $easing;

        &::after {
          border-bottom: 2px solid transparent;
          bottom: -3px;
          content: "";
          left: 0;
          position: absolute;
          right: 0;
          top: 0;
          transform: scale(0);
          transition: border-color 0.3s $easing, transform 0.3s $easing;
        }

        &:hover::after {
          border-color: $frontendred;
          transform: scale(1);
        }
      }

      .dd-container {
        margin: 0 20px;
      }

      @media screen and (min-width: 1000px) {
        .dd-container {
          margin: 0 60px;
        }
      }

      .dd-logo {
        margin: 48px auto;
        max-width: 600px;
        width: 100%;
      }

      .dd-section-full {
        min-height: 94vh;
      }

      .dd-split {
        display: flex;
      }

      .dd-split-item {
        width: 50%;
      }

      .dd-img--oversize {
        max-width: 125%;
        width: 125%;
      }

      .dd-u-bs {
        box-shadow: 0 2px 4px rgba(#3a5765, 0.15);
      }

      .dd-db {
        display: block;
      }

      .dd-u-fx {
        display: flex;
      }

      .dd-u-fx-fdc {
        flex-direction: column;
      }

      .dd-u-fx-aic {
        align-items: center;
      }

      .dd-u-fx-jc {
        justify-content: center;
      }

      .dd-u-fx-center {
        align-items: center;
        display: flex;
        justify-content: center;
      }

      .dd-mhc {
        margin: 0 auto;
      }

      .dd-u-oh {
        overflow: hidden;
      }

  %body{ class: page_classes }

    = yield

    = partial 'partials/footer'

    = partial 'partials/analytics'
